{
    email admin@cferndp.com
}

cferndp.com {
    root * /srv/landing
    encode gzip zstd
    file_server
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }
    @staticExts {
        path *.css *.js *.svg *.woff *.woff2 *.ttf *.png *.jpg *.jpeg
    }
    handle @staticExts {
        file_server
    }
}

# Example subdomain configuration
# app.cferndp.com {
#     reverse_proxy app:3000
# }
